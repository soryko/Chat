<div class="flex <%= message.role == 'user' ? 'justify-end' : 'justify-start' %> items-start space-x-3" data-message-id="<%= message.id %>">
  <!-- Avatar -->
  <div class="flex-shrink-0 <%= message.role == 'user' ? 'order-2' : 'order-1' %>">
    <div class="w-8 h-8 rounded-full flex items-center justify-center text-xs font-medium <%= message.role == 'user' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-600' %>">
      <%= message.role == 'user' ? 'You' : 'AI' %>
    </div>
  </div>
  
  <!-- Message Card -->
  <div class="flex-1 max-w-xs lg:max-w-md <%= message.role == 'user' ? 'order-1' : 'order-2' %>">
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
      <!-- Message Header -->
      <div class="px-4 py-2 border-b border-gray-100 bg-gray-50">
        <div class="flex items-center justify-between">
          <span class="text-xs font-medium text-gray-700">
            <%= message.role == 'user' ? 'You' : 'AI Assistant' %>
          </span>
          <span class="text-xs text-gray-500">
            <%= message.created_at.strftime('%I:%M %p') %>
          </span>
        </div>
      </div>
      
      <!-- Message Content -->
      <div class="px-4 py-3">
        <div class="text-sm text-gray-900 leading-relaxed message-content">
          <%= simple_format(message.content, {}, wrapper_tag: "div") %>
        </div>
      </div>
      
      <!-- Message Footer -->
      <div class="px-4 py-2 bg-gray-50 border-t border-gray-100">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
            <span class="text-xs text-gray-500">Delivered</span>
          </div>
          <div class="flex items-center space-x-2">
            <button class="text-gray-400 hover:text-gray-600">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
              </svg>
            </button>
            <button class="text-gray-400 hover:text-gray-600">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>