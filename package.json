    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16",
    "@rails/actioncable": "^8.0.200"
  },
  "devDependencies": {
    "esbuild": "^0.25.6",
    "tailwindcss": "^3.4.17"
  }
}
